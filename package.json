{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "A React Js and Node Js boilerplate for building a new project. It uses create-react-app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client-install": "npm install --prefix client",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "engines": {
    "node": "10.10.0"
  },
  "author": "Imran Sayed",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "module": "^1.2.5",
    "mongoose": "^5.3.9",
    "nodemailer": "^6.3.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "randomstring": "^1.1.5",
    "validator": "^10.8.0"
  }
}
